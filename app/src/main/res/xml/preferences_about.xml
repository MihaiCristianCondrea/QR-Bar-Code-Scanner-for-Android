<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory
        app:title="@string/app_info">

        <androidx.preference.Preference
            app:summary="@string/copyright"
            app:title="@string/app_name" />

        <androidx.preference.Preference
            app:summary="%1$s"
            app:key="@string/key_application_build_version"
            app:title="@string/application_build_version" />

        <androidx.preference.Preference
            app:key="@string/key_open_source_licenses"
            app:title="@string/menu_open_source_licenses" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        app:title="@string/device_info">
        <androidx.preference.Preference
            app:key="@string/key_device_info"
            app:summary="%1$s"
            app:title="@string/device_info" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
